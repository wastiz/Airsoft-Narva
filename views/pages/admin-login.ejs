<%- contentFor('customCSS') %>
<link rel="stylesheet" href="/css/admin.css">

<div class="admin-login-container">
    <div class="admin-login-box">
        <h2>Вход в админ-панель</h2>
        <form id="admin-login-form">
            <div class="form-group">
                <input type="text" id="admin-login" name="login" placeholder="Логин" required>
            </div>
            <div class="form-group">
                <input type="password" id="admin-password" name="password" placeholder="Пароль" required>
            </div>
            <button type="submit" class="admin-login-btn">Войти</button>
        </form>
    </div>
</div>

<%- contentFor('customJS') %>
<script src="/js/admin-login.js"></script> 