<%- contentFor('customCSS') %>
<link rel="stylesheet" href="/css/admin.css">

<%- include('../partials/admin-header') %>

<div class="admin-container">
    <div class="admin-welcome">
        <h4>Панель администратора</h4>
        <p>Добро пожаловать в панель управления NarvaCQB</p>
    </div>
    
    <div class="admin-dashboard">
        <div class="dashboard-card">
            <h3>Открытая игра</h3>
            <div class="dashboard-stats">
                <div class="stat-item">
                    <span class="stat-label">Зарегистрировано:</span>
                    <span class="stat-value" id="openGameRegistrations">
                        <%= openGameStats.registrationsCount %>
                    </span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Дата игры:</span>
                    <span class="stat-value" id="openGameDate">
                        <%= openGameStats.date %>
                    </span>
                </div>
            </div>
            <a href="/player-list/open-games/<%= openGameStats.id %>" class="dashboard-btn">
                <button class="btn mb-20">Управление регистрациями</button>
            </a>
        </div>
        
        <div class="dashboard-card">
            <h3>Ивент</h3>
            <div class="dashboard-stats">
                <div class="stat-item">
                    <span class="stat-label">Зарегистрировано:</span>
                    <span class="stat-value" id="eventRegistrations">
                        <%= eventStats.registrationsCount %>
                    </span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Дата ивента:</span>
                    <span class="stat-value" id="eventDate">
                        <%= eventStats.date %>
                    </span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Название:</span>
                    <span class="stat-value" id="eventName">
                        <%= eventStats.name %>
                    </span>
                </div>
            </div>
            <a href="/player-list/event/<%= eventStats.id %>" class="dashboard-btn">
                <button class="btn mb-20">Управление регистрациями</button>
            </a>
        </div>

        <div class="daashboard-card">
            <h3 id="registered-users-head"></h3>
            <table class="registered-users-table">
                <thead>
                    <tr>
                        <th>Имя Фамилия</th>
                        <th>Исикукод</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody id="registered-users-body">

                </tbody>
            </table>
        </div>
    </div>
</div>

<%- contentFor('customJS') %>
<script src="/js/admin.js"></script>