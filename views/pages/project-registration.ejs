<%- contentFor('customCSS') %>
<link rel="stylesheet" href="/css/admin.css">
<link rel="stylesheet" href="/css/project-registration.css">

<section class="registration-section">
    <div class="container">
        <h4>Регистрация пользователей для проекта</h4>
        <form id="registration-form">
            <div class="form-group">
                <label for="name">Имя и Фамилия</label>
                <input type="text" id="name" name="name" required placeholder="Введите имя и фамилию">
            </div>
            <div class="form-group">
                <label for="unique_code">Исикукод</label>
                <input type="text" id="unique_code" name="unique_code" required placeholder="Введите уникальный код">
            </div>
            <div class="form-group">
                <label for="email">Email (необязательно)</label>
                <input type="email" id="email" name="email" placeholder="Введите email">
            </div>
            <div class="form-group">
                <label for="phone">Телефон (необязательно)</label>
                <input type="tel" id="phone" name="phone" placeholder="Введите телефон">
            </div>
            <button type="submit">Добавить пользователя</button>
        </form>
        <p id="response-message"></p>
    </div>
</section>

<%- contentFor('customJS') %>
<script src="/js/project-registration.js"></script>
