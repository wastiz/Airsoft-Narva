<section id="slider">
    <div class="bslide d-flex img-fit-cover ai-flex-end">
        <div class="slider-top">
            <div class="slider-logo">
                <a href="/"><img src="img/logo2.png" alt=""></a>
            </div>
        </div>
        <div class="bslide__desc d-flex fd-column">
            <div class="bslide__cat"><%= config.header["before-title"] %></div>
            <h2 class="bslide__title" id="event-title"><%= config.header["title"] %></h2>
            <% if (config.header["after-title"] === 'date') { %>
                <div class="bslide__subtitle"><%= new Date().toLocaleDateString('ru-RU') %></div>
            <% } else { %>
                <div class="bslide__subtitle"><%= config.header["after-title"] %></div>
            <% } %>

            <div class="bslide__btns d-flex ai-flex-end">
                <a href="#rega" class="footer__btn btn" style="margin-right: 10px;"><%= config.header["button"] %></a>
                <% if (config["config-type"] === "landing") { %>
                    <a href="/open-games" class="footer__btn btn" style="margin-top: 10px;"><%= config.header["button2"] %></a>
                <% } %>
            </div>
        </div>

        <% if (config.header["type"] === "video") { %>
            <video id="video_background" preload="auto" no-controls autoplay loop playsinline muted>
                <source src=<%= config.header["bg"] %> type='video/mp4'/>
            </video>
        <% } else if (config.header["type"] === "image") { %>
            <style>
                #slider {
                    background-image: url(<%= config.header["bg"] %>);
                    background-size: cover;
                    background-position: center;
                }
            </style>
        <% } %>

    </div>
</section>
